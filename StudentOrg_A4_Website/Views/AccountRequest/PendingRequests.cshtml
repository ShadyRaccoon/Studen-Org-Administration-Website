@using StudentOrg_A4_Website.Models
@model List<AccountRequest>

@{
    ViewData["Title"] = "Pending Requests";
}

<div class="container mt-5">
    <h2>Pending Account Requests</h2>
    <p class="text-muted">Review and approve/deny member account requests</p>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info">
            No pending requests at the moment.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var request in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                @request.RequestedFirstName @request.RequestedLastName
                            </h5>

                            <p class="card-text">
                                <strong>Requested by:</strong> @request.RequestAuthor (@request.RequestAuthorRole)<br />
                                <strong>Date:</strong> @request.RequestDate.ToString("yyyy-MM-dd")<br />
                                <strong>Status:</strong> <span class="badge bg-warning">@request.RequestStatus</span>
                            </p>

                            @if (!string.IsNullOrEmpty(request.RequestDescription))
                            {
                                <p class="card-text">
                                    <strong>Reason:</strong><br />
                                    @request.RequestDescription
                                </p>
                            }

                            <div class="d-flex gap-2">
                                <form asp-action="ApproveRequest" asp-controller="AccountRequest" method="post" style="display:inline;">
                                    <input type="hidden" name="requestId" value="@request.RequestId" />
                                    <button type="submit" class="btn btn-success btn-sm">Approve</button>
                                </form>

                                <form asp-action="DenyRequest" asp-controller="AccountRequest" method="post" style="display:inline;">
                                    <input type="hidden" name="requestId" value="@request.RequestId" />
                                    <button type="submit" class="btn btn-danger btn-sm">Deny</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <div class="mt-4">
        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Back to Home</a>
    </div>
</div>