@model StudentOrg_A4_Website.ViewModels.PostViewModel

<div class="container py-5">
    <!-- Publish Button -->
    <div class="d-flex justify-content-center mb-4">
        <a asp-action="CreatePost" class="btn btn-back me-2">← Edit</a>
        <form asp-action="PublishPost" method="post" style="display:inline;">
            <button type="submit" class="btn btn-publish">Publish Post</button>
        </form>
    </div>

    <div class="row">
        <!-- Left: Card Preview -->
        <div class="col-md-4">
            <h5 class="section-title mb-3">Card Preview</h5>
            <div class="preview-card">
                <img src="/image/@Model.PostBanner" class="preview-img" alt="Banner">
                <div class="preview-body">
                    <h5 class="preview-title">@Model.PostTitle</h5>
                    <p class="preview-text">@Model.PostDescription</p>
                    <small class="preview-meta">By @Model.PostAuthor</small>
                </div>
            </div>
        </div>

        <!-- Divider -->
        <div class="col-md-1 d-flex justify-content-center">
            <div class="divider"></div>
        </div>

        <!-- Right: Full Post Preview -->
        <div class="col-md-7">
            <h5 class="section-title mb-3">Full Post Preview</h5>
            <article class="article-card">
                <img src="/image/@Model.PostBanner" class="article-img mb-3" alt="Banner">
                <h1 class="article-title">@Model.PostTitle</h1>
                <p class="article-lead">@Model.PostDescription</p>
                <hr class="article-divider">
                <div class="article-content">@Model.PostContent</div>
                <p class="article-meta mt-3">Author: @Model.PostAuthor</p>
            </article>
        </div>
    </div>
</div>

<style>
    .btn-back {
        background-color: white;
        color: black;
        border: 2px solid black;
        padding: 10px 20px;
        transition: all 0.2s;
    }

        .btn-back:hover {
            background-color: black;
            color: white;
        }

    .btn-publish {
        background-color: black;
        color: white;
        border: 2px solid black;
        padding: 10px 20px;
        transition: all 0.2s;
    }

        .btn-publish:hover {
            background-color: #198754;
            border-color: #198754;
            color: white;
        }

    .section-title {
        color: #555;
    }

    .preview-card {
        background: white;
        border: 2px solid black;
        border-radius: 8px;
        overflow: hidden;
    }

    .preview-img {
        width: 100%;
        border-bottom: 2px solid black;
    }

    .preview-body {
        padding: 20px;
    }

    .preview-title {
        color: black;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .preview-text {
        color: black;
        line-height: 1.6;
    }

    .preview-meta {
        color: #555;
    }

    .divider {
        width: 2px;
        background: black;
        height: 100%;
    }

    .article-card {
        background: white;
        border: 2px solid black;
        border-radius: 8px;
        padding: 30px;
    }

    .article-img {
        width: 100%;
        border-radius: 6px;
        border: 2px solid black;
    }

    .article-title {
        color: black;
        font-weight: bold;
        margin-bottom: 15px;
    }

    .article-lead {
        color: #333;
        font-size: 1.1rem;
        line-height: 1.6;
    }

    .article-divider {
        border: none;
        border-top: 2px solid black;
        margin: 20px 0;
    }

    .article-content {
        color: black;
        line-height: 1.8;
    }

    .article-meta {
        color: #555;
    }
</style>
