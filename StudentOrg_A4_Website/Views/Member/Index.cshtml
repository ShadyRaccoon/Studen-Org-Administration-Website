@using StudentOrg_A4_Website.Models
@model IEnumerable<Member>

@{
    ViewData["Title"] = "Members";
    var canEdit = User.IsInRole("Admin") || User.IsInRole("Bureau");
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Members</h2>
        @if (canEdit)
        {
            <a asp-action="AddMember" class="btn btn-add">Add New Member</a>
        }
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert-error alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert-success-custom alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="table-card">
        <table class="table mb-0">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Faculty</th>
                    <th>Join Date</th>
                    <th>Leave Date</th>
                    <th>Status</th>
                    @if (canEdit)
                    {
                        <th>Actions</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var member in Model)
                {
                    <tr class="@(member.LeaveDate.HasValue ? "inactive-row" : "")">
                        <td>@member.FirstName</td>
                        <td>@member.LastName</td>
                        <td>@member.Faculty</td>
                        <td>@member.JoinDate.ToString("dd/MM/yyyy")</td>
                        <td>
                            @if (member.LeaveDate.HasValue)
                            {
                                @member.LeaveDate.Value.ToString("dd/MM/yyyy")
                            }
                            else
                            {
                                <span class="text-placeholder">-</span>
                            }
                        </td>
                        <td>
                            @if (member.LeaveDate.HasValue)
                            {
                                <span class="badge badge-inactive">Inactive</span>
                            }
                            else
                            {
                                <span class="badge badge-active">Active</span>
                            }
                        </td>
                        @if (canEdit)
                        {
                            <td>
                                @if (!member.LeaveDate.HasValue)
                                {
                                    <a asp-action="EditMember" asp-route-id="@member.MemberId"
                                       class="btn btn-sm btn-edit me-1">Edit</a>

                                    <button type="button" class="btn btn-sm btn-remove"
                                            data-bs-toggle="modal"
                                            data-bs-target="#removeModal-@member.MemberId">
                                        Remove
                                    </button>

                                    <!-- Remove Confirmation Modal -->
                                    <div class="modal fade" id="removeModal-@member.MemberId" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content modal-card">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Confirm Remove Member</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>Are you sure you want to remove <strong>@member.FirstName @member.LastName</strong>?</p>
                                                    <p class="text-danger">This will:</p>
                                                    <ul>
                                                        <li>Set their leave date to today</li>
                                                        <li>Deactivate their account (if they have one)</li>
                                                        <li>End their bureau position (if they have one)</li>
                                                    </ul>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-cancel" data-bs-dismiss="modal">Cancel</button>
                                                    <form asp-action="RemoveMember" asp-route-id="@member.MemberId" method="post" class="d-inline">
                                                        <button type="submit" class="btn btn-remove">Remove Member</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-placeholder">-</span>
                                }
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="alert-card">
            No members found.
            @if (canEdit)
            {
                <a asp-action="AddMember" class="alert-link">Add your first member</a>
            }
        </div>
    }
</div>

<style>
    .table-card {
        background: white;
        border: 2px solid black;
        border-radius: 8px;
        overflow: hidden;
    }

    .table {
        color: black;
    }

        .table thead {
            background: black;
            color: white;
        }

            .table thead th {
                border: none;
                padding: 15px;
                font-weight: 500;
            }

        .table tbody td {
            padding: 15px;
            border-bottom: 1px solid #ddd;
            vertical-align: middle;
        }

        .table tbody tr:last-child td {
            border-bottom: none;
        }

    .inactive-row {
        background-color: #f5f5f5;
        color: #777;
    }

    .text-placeholder {
        color: #999;
    }

    .badge-active {
        background: black;
        color: white;
        padding: 5px 12px;
        border-radius: 20px;
    }

    .badge-inactive {
        background: white;
        color: black;
        border: 2px solid black;
        padding: 4px 10px;
        border-radius: 20px;
    }

    .btn-add {
        background-color: black;
        color: white!important;
        border: 2px solid black;
        padding: 10px 20px;
        transition: all 0.2s;
    }

        .btn-add:hover {
            background-color: white;
            color: black!important;
            border: 2px solid black;
        }

    .btn-edit {
        background-color: white;
        color: black;
        border: 2px solid black;
        transition: all 0.2s;
    }

        .btn-edit:hover {
            background-color: black;
            color: white!important;
            border: 2px solid black;
        }

    .btn-remove {
        background-color: black;
        color: white;
        border: 2px solid black;
        transition: all 0.2s;
    }

        .btn-remove:hover {
            background-color: #dc3545;
            border-color: #dc3545;
            color: white;
        }

    .btn-cancel {
        background-color: white;
        color: black;
        border: 2px solid black;
        transition: all 0.2s;
    }

        .btn-cancel:hover {
            background-color: black;
            color: white;
        }

    .modal-card {
        border: 2px solid black;
        border-radius: 8px;
    }

    .modal-header {
        border-bottom: 2px solid black;
    }

    .modal-footer {
        border-top: 2px solid black;
    }

    .alert-card {
        background: white;
        border: 2px solid black;
        border-radius: 8px;
        padding: 20px;
        text-align: center;
        color: black;
    }

    .alert-link {
        color: black;
        font-weight: bold;
        text-decoration: underline;
    }

    .alert-error {
        background: white;
        border: 2px solid #dc3545;
        border-radius: 8px;
        padding: 15px 20px;
        color: #dc3545;
        margin-bottom: 20px;
    }

    .alert-success-custom {
        background: white;
        border: 2px solid #198754;
        border-radius: 8px;
        padding: 15px 20px;
        color: #198754;
        margin-bottom: 20px;
    }
</style>
