@model IEnumerable<StudentOrg_A4_Website.Models.Post>

<!-- Hero Section -->
<section class="hero">
    <div class="hero-content">
        <h1>Asociația de la 4</h1>
        <p>Your tagline here</p>
    </div>
</section>

<!-- Posts Section -->
<div class="container mt-5">
    <h2 class="mb-4">Articole</h2>

    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-md-4 mb-4">
                <a asp-controller="Post" asp-action="DetailedView" asp-route-id="@post.PostId" class="text-decoration-none">
                    <div class="card h-100 post-card">
                        @{
                            var bannerSrc = string.IsNullOrEmpty(post.PostBanner) || post.PostBanner == "default_banner"
                            ? "/images/placeholderA4.jpg"
                            : $"/image/{post.PostBanner}";
                        }
                        <div class="card-img-wrapper">
                            <img src="@bannerSrc" class="card-img-top" alt="Banner">
                        </div>
                        <div class="card-body">
                            <h5 class="card-title text-dark">@post.PostTitle</h5>
                            <p class="card-text text-muted">@post.PostDescription</p>
                            <small class="text-muted">@post.PostAuthor · @post.PostDate?.Day/@post.PostDate?.Month/@post.PostDate?.Year</small>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Nu există articole momentan.
        </div>
    }

    @if (ViewBag.TotalPages > 1)
    {
        <nav class="mt-4 mb-5">
            <ul class="pagination justify-content-center">
                @if (ViewBag.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)">«</a>
                    </li>
                }

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                    </li>
                }

                @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)">»</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>

<style>
    .hero {
        background-image: url('/images/bannerA4.jfif');
        background-size: cover;
        background-position: center;
        min-height: 70vh;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
    }

        .hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
        }

    .hero-content {
        position: relative;
        text-align: center;
        color: white;
    }

        .hero-content h1 {
            font-size: 3rem;
            margin-bottom: 1rem;
        }

    .post-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .post-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

    .card-img-wrapper {
        width: 100%;
        padding-top: 56.25%;
        position: relative;
        overflow: hidden;
    }

        .card-img-wrapper .card-img-top {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .card-title {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .card-text {
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }
</style>