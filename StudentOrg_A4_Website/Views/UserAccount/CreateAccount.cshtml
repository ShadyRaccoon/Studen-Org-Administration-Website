@model int

@{
    ViewData["Title"] = "Create Account";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Create Account for Member</h2>
            <p class="text-muted">Fill in the details to create an account</p>

            <form asp-action="CreateAccount" asp-controller="UserAccount" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" name="requestId" value="@Model" />

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter email" required />
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" id="password" name="password" class="form-control" placeholder="Enter password" required />
                </div>

                <div class="alert alert-info">
                    <small>Username will be auto-generated based on member information</small>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Create Account</button>
                    <a asp-action="PendingRequests" asp-controller="AccountRequest" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}