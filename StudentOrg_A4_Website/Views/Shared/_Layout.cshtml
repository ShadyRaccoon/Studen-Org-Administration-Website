<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentOrg_A4_Website</title>
    <script type="importmap"></script>
    @RenderSection("Styles", required: false)
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StudentOrg_A4_Website.styles.css" asp-append-version="true" />
    <style>
        body {
            padding-top: 70px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 fixed-top">
            <div class="container-fluid">
                <a asp-controller="Home" asp-action="Index">
                    <img src="/images/logoA4.jpg" alt="Logo" style="height: 40px;">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav mx-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>
                            <a class="nav-link" asp-controller="ControlPanel" asp-action="Index">Control Panel</a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Posts" asp-action="Index">Articole</a>
                    </li>
                    <li class="nav-item">
                            <a class="nav-link" asp-controller="Placeholder" asp-action="ComingSoon">Educational</a>
                    </li>
                    <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle">Despre Noi</a>

                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item" asp-controller="StaticContent" asp-action="Departments">Departamente</a>
                                <a class="dropdown-item" asp-controller="BureauMember" asp-action="CurrentBureau">Biroul de conducere</a>
                                <a class="dropdown-item" asp-controller="StaticContent" asp-action="History">Istoria noastra</a>
                            </div>

                            <style>
                                .nav-item.dropdown:hover .dropdown-menu {
                                    display: block;
                                }

                                a {
                                    color: black !important;
                                }

                                .dropdown-item{
                                    color:black !important;
                                }

                                .dropdown-item:hover {
                                    color: black;
                                        background-color: #f8f9fa;
                                }
                            </style>
                    </li>
                </ul>

                @if (User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="UserAccount" asp-action="Logout">
                                    Logout
                                </a>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="UserAccount" asp-action="Login">
                                    Login
                                </a>
                            </li>
                        </ul>
                    }
                    <ul class="navbar-nav">
                </ul>
            </div>
            </div>
        </nav>
    </header>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - StudentOrg_A4_Website - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


